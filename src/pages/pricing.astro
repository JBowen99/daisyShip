---
// Component Imports
import PricingComponent from "~/components/PricingComponent.astro";
import Button from "../components/Button.astro";
import HeroWithBackground from "../components/HeroWithBackground.astro";
import HeroWithForm from "../components/HeroWithForm.astro";
import HeroWithImage from "../components/HeroWithImage.astro";
import PageLayout from "../layouts/PageLayout.astro";

const content = {
  title: "Pricing",
};
---

<PageLayout content={content}>
  <HeroWithBackground title="Pricing" />
  <div class="px-5 md:px-15 lg:px-28">
    <PricingComponent />
    <HeroWithImage />
    <HeroWithImage reversed />
    <HeroWithForm />
  </div>
</PageLayout>
