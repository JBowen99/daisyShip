---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  subtitle: string;
  price: string;
  period: string;
  features: string[];
  buttonText: string;
}

const { title, subtitle, price, period, features, buttonText } =
  Astro.props as Props;
---

<div class="card card-compact bg-base-100 shadow-xl min-w-80">
  <div class="card-body items-center">
    <h2 class="card-title text-4xl">{title}</h2>
    <h3 class="text-lg">{subtitle}</h3>
    <h3 class="font-bold text-5xl">{price}</h3>
    <span class="text-lg">{period}</span>
    <div
      class="flex flex-col w-full justify-start items-start space-y-3 mb-3 px-10"
    >
      {
        features.map((feature) => (
          <span class="flex flex-row items-center space-x-2 text-xl">
            <Icon name="tabler:circle-check-filled" />
            <p>{feature}</p>
          </span>
        ))
      }
    </div>
    <div class="card-actions justify-center">
      <button class="btn btn-primary">{buttonText}</button>
    </div>
  </div>
</div>
