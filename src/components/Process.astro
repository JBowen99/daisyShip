---
import type { ProcessStep } from "../types/ProcessStep";
import { Icon } from "astro-icon/components";

interface Props {
  steps: ProcessStep[];
  title?: string;
  subtitle?: string;
}

const { steps, title, subtitle } = Astro.props;
---

<section class="py-20">
  {title && <h1 class="text-title font-title text-center mb-8">{title}</h1>}
  {subtitle && <h2 class="text-subtitle font-subtitle text-center mb-8">{subtitle}</h2>}
  
  <div class="w-full">
    <ul class="steps steps-vertical">
      {steps.map((step, index) => (
        <li class="step step-primary" >
          <div class="flex flex-col gap-1 my-5">
            <div class="flex items-center gap-3">              
              <h3 class="text-subtitle font-bold">{step.title}</h3>
              {step.icon && <Icon name={step.icon} class="w-8 h-8 text-primary" />} <!-- Optional Icon -->
            </div>
            <p class="text-gray-600 text-text">{step.description}</p>
          </div>
        </li>
      ))}
    </ul>
  </div>
</section>
