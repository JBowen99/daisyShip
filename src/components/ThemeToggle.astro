---
// ThemeToggle.astro
import { Icon } from "astro-icon/components";
---

<button id="theme-toggle" class="btn btn-ghost">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="w-5 h-5 sun-icon"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
  >
    <path
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    ></path>
  </svg>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="w-5 h-5 moon-icon"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
  >
    <path
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    ></path>
  </svg>
</button>

<script>
  console.log("current theme:", localStorage.getItem("theme"));

  // Initialize theme from localStorage or default to light
  const currentTheme = localStorage.getItem("theme") || "light";
  document.documentElement.setAttribute("data-theme", currentTheme);

  // Toggle theme on click
  const themeToggle = document.getElementById("theme-toggle");
  if (themeToggle) {
    console.log("Found toggle");
  } else {
    console.log("Toggle not found");
  }

  themeToggle?.addEventListener("click", (e) => {
    const theme = document.documentElement.getAttribute("data-theme");
    //const newTheme = theme === "light" ? "dark" : "light";
    let newTheme = "";
    if (theme == "light") {
      newTheme = "dark";
    } else {
      newTheme = "light";
    }
    document.documentElement.setAttribute("data-theme", newTheme);
    localStorage.setItem("theme", newTheme);
    console.log("changing theme to ", newTheme);
  });
</script>

<style>
  /* Hide the appropriate icon based on the current theme */
  :global([data-theme="light"]) .moon-icon {
    display: none;
  }

  :global([data-theme="dark"]) .sun-icon {
    display: none;
  }
</style>
